					$encoding = $match[1];
			}
			
		}
	}
	else
	{
		if ($new_file) 
		{
			$msg = _("This is new format backup file which cannot be restored on database not migrated to utf8.");
			if ($return_errors)
				return $msg;
			else
				display_error($msg);
			return false;
		}
		 else	
			$encoding = 'latin1'; 
	}

	db_set_charset($db, $encoding);

/*/	{ 	
	global $path_to_root;
	$f = fopen($path_to_root.'/tmp/dbimport.txt', 'w+');
	fwrite($f, print_r($set_names,true) ."\n");
