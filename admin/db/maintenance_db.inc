		$save_debug = $SysPrefs->go_debug;
		$SysPrefs->go_debug = 0;
	}
	
	if (is_array($drop_queries))
	{
		foreach($drop_queries as $drop_query)
		{
			if (!db_query($drop_query[0]))
			{
