   $arySort = $aryResult = array();

   
   foreach ($aryData as $key => $aryRow)
       
       $arySort[$strIndex ? $aryRow[$strIndex] : $key] = $aryRow[$strSortBy];

   
   natsort($arySort);

   
   if ($strSortType=="desc")
       
       arsort($arySort);

   
